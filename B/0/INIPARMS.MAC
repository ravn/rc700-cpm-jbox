;= SYSTEM DISK DRIVE		MODIFIED BY HDINST                            =
;==============================================================================

ibootd:	db	0	; boot disk, 0 = floppy (A), <> 0 = hard disk (C)
			; 	Init loged drive nr. (HD)

	DS	128-($ AND 127)	; ALIGN TO 128 BYTE

;==============================================================================
;= END OF H/W CONFIGURATION PARAMETERS                                        =
